{
  "name": "42-time-extension",
  "version": "1.0.0",
  "description": "42-time extension",
  "scripts": {
    "build": "webpack --mode production",
    "build:firefox": "webpack --mode production && cp public/manifest.firefox.json dist/manifest.json",
    "dev": "webpack --mode development --watch",
    "dev:firefox": "webpack --mode development --watch & nodemon --watch public/manifest.firefox.json --exec \"cp public/manifest.firefox.json dist/manifest.json\""
  },
  "devDependencies": {
    "@types/chrome": "^0.0.329",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  }
}
